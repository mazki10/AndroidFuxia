<resources>
    <style name="Base.Theme.AlmohadasComodasAdemásBonitas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">#E64A19</item>
        <item name="colorAccent">@color/purple</item>

        <!-- Typography -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:itemTextAppearance">@style/MyTextAppearance</item>


        <!-- Definición del estilo para los botones -->
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="Theme.AlmohadasComodasAdemásBonitas" parent="Base.Theme.AlmohadasComodasAdemásBonitas" />

    <!-- ActionBar Style -->

    <!-- Definición del estilo para los botones -->
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">#FFFFFF</item>
        <!-- Ajusta otros atributos según tus necesidades -->
    </style>

    <style name="MyTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/black</item>
        <!-- Puedes personalizar más el estilo si es necesario -->
    </style>
</resources>
