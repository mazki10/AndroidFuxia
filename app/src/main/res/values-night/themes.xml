<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AlmohadasComodasAdemásBonitas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_900</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Texto -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_300</item>

        <!-- ActionBar -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="Theme.AlmohadasComodasAdemásBonitas" parent="Base.Theme.AlmohadasComodasAdemásBonitas" />

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@color/purple_700</item>
        <item name="android:titleTextColor">@color/white</item> <!-- Cambia el color del texto -->
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
